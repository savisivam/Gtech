<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="7dp"
    card_view:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mobile_views">
        <ImageView
            android:id="@+id/pictures"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/curveshape"/>
        <TextView
            android:id="@+id/prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pictures"
            android:text="rtyt"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/gram_cardview"
            android:layout_toRightOf="@+id/pictures"
            android:layout_below="@+id/prod_name"
            android:layout_width="100dp"
            android:layout_height="50dp"
            card_view:cardCornerRadius="7dp"
            card_view:cardElevation="7dp"
            card_view:cardUseCompatPadding="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-20dp"

            >
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:padding="2dp">
                <TextView
                    android:id="@+id/gram_rate"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="hello"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_margin="2dp"

                    />
                <ImageView
                    android:layout_toRightOf="@+id/gram_rate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/expand_arrow"
                    android:layout_alignParentTop="true"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/price_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pictures"
            android:layout_below="@+id/gram_cardview"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-15dp"
            />
        <TextView
            android:id="@+id/demo_price_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/price_rate"
            android:layout_below="@+id/gram_cardview"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-15dp"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>